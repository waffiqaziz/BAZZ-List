<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".ui.notes.DetailNoteActivity">

  <com.google.android.material.appbar.AppBarLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <com.google.android.material.appbar.MaterialToolbar
      android:id="@+id/toolbar"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="?attr/colorPrimaryVariant"
      android:theme="@style/MyThemeOverlay_Toolbar"
      app:layout_behavior="@string/appbar_scrolling_view_behavior"
      app:popupTheme="@style/Theme.BAZZList.PopupOverlay"
      app:subtitleTextColor="@color/gray_900"
      app:title="@string/note" />

  </com.google.android.material.appbar.AppBarLayout>

  <LinearLayout
    android:id="@+id/container_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <EditText
      android:id="@+id/et_title"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:autofillHints="Title"
      android:background="@null"
      android:fontFamily="@font/nunito_sans_bold"
      android:hint="@string/title"
      android:inputType="text"
      android:minHeight="48dp"
      android:paddingHorizontal="20dp"
      android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall" />

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">

      <TextView
        android:id="@+id/tv_date_now"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        android:textAppearance="@style/TextAppearance.Material3.BodySmall"
        tools:ignore="RtlSymmetry"
        tools:text="Saturday, August 3 14:38" />

      <TextView
        android:id="@+id/tv_total_characters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="@string/zero_characters"
        android:textAppearance="@style/TextAppearance.Material3.BodySmall"
        tools:text=" |  5 Characters" />

    </LinearLayout>

    <jp.wasabeef.richeditor.RichEditor
      android:id="@+id/et_description"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:autofillHints="Description"
      android:gravity="top"
      android:hint="@string/start_typing"
      android:layout_marginHorizontal="20dp"
      android:scrollbars="vertical"
      android:scrollHorizontally="true"
      android:textAppearance="@style/TextAppearance.Material3.DisplayLarge" />

  </LinearLayout>

  <HorizontalScrollView
    android:id="@+id/custom_toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom|center_vertical"
    android:gravity="center"
    android:orientation="horizontal"
    android:background="@color/gray_100"
    android:padding="8dp"
    tools:visibility="visible">

    <LinearLayout
      android:orientation="horizontal"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">

      <ImageButton
        android:id="@+id/action_undo"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@null"
        android:contentDescription="@null"
        android:src="@drawable/ic_undo" />

      <ImageButton
        android:id="@+id/action_redo"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@null"
        android:contentDescription="@null"
        android:src="@drawable/ic_redo" />

      <ImageButton
        android:id="@+id/action_bold"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@null"
        android:contentDescription="@null"
        android:src="@drawable/ic_bold" />

      <ImageButton
        android:id="@+id/action_italic"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@null"
        android:contentDescription="@null"
        android:src="@drawable/ic_italic" />

      <ImageButton
        android:id="@+id/action_subscript"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@null"
        android:contentDescription="@null"
        android:src="@drawable/ic_subscript" />

      <ImageButton
        android:id="@+id/action_superscript"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@null"
        android:contentDescription="@null"
        android:src="@drawable/ic_superscript" />

      <ImageButton
        android:id="@+id/action_strikethrough"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@null"
        android:contentDescription="@null"
        android:src="@drawable/ic_strikethrough" />

      <ImageButton
        android:id="@+id/action_underline"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@null"
        android:contentDescription="@null"
        android:src="@drawable/ic_underline" />

      <ImageButton
        android:id="@+id/action_heading1"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@null"
        android:contentDescription="@null"
        android:src="@drawable/ic_h1" />

      <ImageButton
        android:id="@+id/action_heading2"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@null"
        android:contentDescription="@null"
        android:src="@drawable/ic_h2" />

      <ImageButton
        android:id="@+id/action_heading3"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@null"
        android:contentDescription="@null"
        android:src="@drawable/ic_h3" />

      <ImageButton
        android:id="@+id/action_align_left"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@null"
        android:contentDescription="@null"
        android:src="@drawable/ic_text_left_alignment" />

      <ImageButton
        android:id="@+id/action_align_center"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@null"
        android:contentDescription="@null"
        android:src="@drawable/ic_text_center_alignment" />

      <ImageButton
        android:id="@+id/action_align_right"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@null"
        android:contentDescription="@null"
        android:src="@drawable/ic_text_right_alignment" />

      <ImageButton
        android:id="@+id/action_insert_bullets"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@null"
        android:contentDescription="@null"
        android:src="@drawable/ic_bullet_list" />

      <ImageButton
        android:id="@+id/action_insert_numbers"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@null"
        android:contentDescription="@null"
        android:src="@drawable/ic_numbering" />

      <ImageButton
        android:id="@+id/action_insert_link"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@null"
        android:contentDescription="@null"
        android:src="@drawable/ic_link" />

      <ImageButton
        android:id="@+id/action_insert_checkbox"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@null"
        android:contentDescription="@null"
        android:src="@android:drawable/checkbox_on_background" />
    </LinearLayout>
  </HorizontalScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>